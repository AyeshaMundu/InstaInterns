<!DOCTYPE html>
<html>
<head>
	<title>AGENT-PROFILE</title>
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="/css/visitor.css">
	<link rel="stylesheet/less" type="text/css" href="/css/style.less" />
	<link rel="stylesheet" type="text/css" href="/css/agent-page.css">
</head>
<body>
	<div class="col-md-12">
		<div class="complete-container" >
			<fieldset id="agent-p-fieldset">
				<legend  id="agent-p-legend" style="background:none; border:none;"><span style="background-color:white">Profile Settings</span></legend>
				<div class="row">
					<div class="col-md-4" style="height:inherit">
						<div id="profile-photo">
							<div id="choosen-file">Choose file</div>
						</div>
						<form id="uploadForm" enctype="multipart/form-data" action="/test" method="post">
							<label id="upload-camera" style="cursor:pointer">
								<input type="file" onchange="pressed()"/ id="aa">
								<input type="submit" value="Upload Image" name="submit" style="display:none;" id="upload-image">
								<span class="glyphicon glyphicon-camera"></span>
							</label>
						</form>
						<!-- <div id="upload-camera" >
							<input type="file" name="us" />
							
						</div> -->
					</div>
					<div class="col-md-6" id="name-pass-col">
						<div class="name-pass-container">
							<div id="agent-p-name">
								Name:<input type="text" class="form-control" id="name">
							</div>
							<div id="agent-p-pass">
								Password:<input type="password" class="form-control" id="password">
							</div>
							<div id="agent-p-passcon">
								Confirm Password:<input type="password" class="form-control" id="confirm">
							</div>
							<div id="agent-p-phno">
								E-mail:<input type="text" class="form-control" id="email" readonly>
							</div>
							<button type="button" class="btn btn-default" id="ok-button"><span class="glyphicon glyphicon-ok"></span></button>
						</div>
					</div>
				</div>
			</fieldset>
		</div>
	</div>
	<footer>
		<script src="http://code.jquery.com/jquery-1.10.2.js"></script>
		<script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
		<script src="http://code.jquery.com/jquery-1.11.1.js"></script>
		<!--<script src="/socket.io/socket.io.js"></script>-->
		<script src="https://cdn.socket.io/socket.io-1.0.0.js"></script>
		<!--<script src="http://yournodeserver/socket.io/socket.io.js"></script>-->
		<script src="/js/bootstrap.js"></script>
		<script src="/js/agent_profile.js"></script>
		<script src="/js/less.js" type="text/javascript"></script>
		<script type="text/javascript">
			window.pressed = function(){
				var a = document.getElementById('aa');
				if(a.value == "")
				{
					$("#choosen-file").text("choosen file");
				}
				else
				{
					var theSplit = a.value.split('\\');
					$("#choosen-file").text(theSplit[theSplit.length-1]);
					$("#upload-image").css("display","block");
				}
			};
		</script>
	</footer>
</body>
</html>